{
  "name": "api-blog-microservices",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build --all",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "start:dev:all": "concurrently -n GATEWAY,MS-USER,MS-AUTH,MS-REWARDS,MS-LOYALTY -c green,cyan,magenta,blue,red \"pnpm run start:dev:gateway\" \"pnpm run start:dev:ms-user\" \"pnpm run start:dev:ms-auth\" \"pnpm run start:dev:ms-rewards\" \"pnpm run start:dev:ms-loyalty\"",
    "start:dev:gateway": "nest start api-gateway --watch",
    "start:dev:ms-user": "nest start ms-user --watch",
    "start:dev:ms-auth": "nest start ms-auth --watch",
    "start:dev:ms-loyalty": "nest start ms-loyalty --watch",
    "start:dev:ms-rewards": "nest start ms-rewards --watch",
    "start:prod": "concurrently -n GATEWAY,MS-USER,MS-AUTH,MS-REWARDS,MS-LOYALTY -c green,cyan,magenta,blue,red \"node dist/apps/api-gateway/main.js\" \"node dist/apps/ms-user/main.js\" \"node dist/apps/ms-auth/main.js\" \"node dist/apps/ms-rewards/main.js\" \"node dist/apps/ms-loyalty/main.js\"",
    "start:debug:gateway": "nest start api-gateway --debug --watch",
    "start:debug:ms-user": "nest start ms-user --debug --watch",
    "start:debug:ms-auth": "nest start ms-auth --debug --watch",
    "start:debug:ms-loyalty": "nest start ms-loyalty --debug --watch",
    "start:debug:ms-rewards": "nest start ms-rewards --debug --watch",
    "build:gateway": "nest build api-gateway",
    "build:ms-user": "nest build ms-user",
    "build:ms-auth": "nest build ms-auth",
    "build:ms-loyalty": "nest build ms-loyalty",
    "build:ms-rewards": "nest build ms-rewards",
    "build:lib-common": "nest build common",
    "build:lib-db": "nest build database",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:e2e": "jest --config ./apps/api-gateway/test/jest-e2e.json",
    "typeorm": "ts-node ./node_modules/typeorm/cli.js --dataSource libs/database/src/data-source.ts",
    "migration:generate": "npm run typeorm migration:generate -- -n",
    "migration:create": "npm run typeorm migration:create -- -n",
    "migration:run": "npm run typeorm migration:run",
    "migration:revert": "npm run typeorm migration:revert"
  },
  "dependencies": {
    "@nestjs/class-transformer": "^0.4.0",
    "@nestjs/class-validator": "^0.13.4",
    "@nestjs/common": "^11.0.1",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.0.1",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/microservices": "^11.1.3",
    "@nestjs/platform-express": "^11.0.1",
    "@nestjs/swagger": "^11.2.0",
    "@nestjs/throttler": "^6.4.0",
    "@nestjs/typeorm": "^11.0.0",
    "@types/bcrypt": "^5.0.2",
    "axios": "^1.11.0",
    "bcrypt": "^6.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "concurrently": "^9.2.0",
    "csrf-csrf": "^4.0.3",
    "helmet": "^8.1.0",
    "pg": "^8.16.3",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "slugify": "^1.6.6",
    "swagger-ui-express": "^5.0.1",
    "typeorm": "^0.3.25"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.1",
    "@swc/cli": "^0.6.0",
    "@swc/core": "^1.10.7",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.7",
    "@types/supertest": "^6.0.2",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "globals": "^16.0.0",
    "jest": "^29.7.0",
    "prettier": "^3.4.2",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/apps/",
      "<rootDir>/libs/"
    ],
    "moduleNameMapper": {
      "^@app/common(|/.*)$": "<rootDir>/libs/common/src/$1",
      "^@app/database(|/.*)$": "<rootDir>/libs/database/src/$1"
    }
  }
}
